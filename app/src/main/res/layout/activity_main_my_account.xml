<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main_my_account">

  <include layout="@layout/tool_bar_my_account"/>

  <LinearLayout
      android:id="@+id/name_LL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingTop="15dp"
      android:orientation="vertical">

      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:src="@drawable/circle_user_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Anurag Sahani"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="7905007636"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="normal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="anuragsahani0123@gmail.com"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="normal" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit"
        android:layout_gravity="end"
        android:paddingEnd="5dp"
        tools:ignore="RtlSymmetry" />
    <view
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"
        android:layout_marginTop="10dp"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/my_order_LL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:text="My Orders"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>
    <view
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="1dp"
        android:background="@color/grey_696969"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:text="VIEW ALL ORDERS"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_marginLeft="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        tools:ignore="RtlHardcoded" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/my_address_LL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:text="My Addresses"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:text="+ Add a new address"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        tools:ignore="RtlHardcoded" />
    <view
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="1dp"
        android:background="@color/grey_696969"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:text="BRD Medical College Near Power House Gorakhpur UP Pin - 273013 8896826141"
        android:textColor="@color/purple_700"
        android:textSize="13sp"
        android:textStyle="normal"
        android:layout_marginStart="10dp"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/account_setting"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_settings"
        android:paddingStart="40dp"
        android:layout_marginStart="10dp"
        tools:ignore="RtlSymmetry">


    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Account Setting"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp">
    </TextView>

  </LinearLayout>

</LinearLayout>